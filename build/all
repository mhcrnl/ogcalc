#!/bin/sh

set -e

# Note that this script builds *everything* and hence requires
# all prerequisites to be installed.  If you don't have everything,
# run the builds from individual subdirectories.

# Build all Qt code

for type in plain uic ui; do
  (
    echo "Building qt/$type"
    cd "qt/$type"
    if [ -d make ]; then
      echo "Plain make"
      (cd make && make clean all dist)
    fi
    if [ -d automake ]; then
      echo "Autoconf/automake"
      (cd automake && autoreconf -i && ./configure && make clean all dist)
    fi
    if [ -d qmake ]; then
      echo "qmake"
      (cd qmake && qmake && make clean all dist)
    fi
    if [ -d cmake ]; then
      echo "cmake"
      (cd cmake && cmake . && make clean all dist)
    fi
    if [ -d python ]; then
      echo "python"
      ARCHIVE_NAME="ogcalc-qt-${type}-python-1.5.0"
      (cd python && tar chfv - --transform="s;^;${ARCHIVE_NAME}/;" $(git ls-tree -r --name-only HEAD . | grep -v '^.gitignore') | gzip -9 > "${ARCHIVE_NAME}.tar.gz")
    fi
  )
done

# Build all GTK+ code
for type in $(find gtk -name 'configure.ac' | xargs dirname); do
  (
    echo "Building $type"
    (cd "$type" autoreconf -i && ./configure && make clean all distcheck)
  )
done

